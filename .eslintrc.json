{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": 0,
    "indent": ["error", 4],
    "max-len": ["error", 150],
    "import/no-dynamic-require": 0,
    "global-require": 0
  }
}
